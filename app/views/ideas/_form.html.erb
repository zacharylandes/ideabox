  <div class = 'new-idea-form'>
      <%= form_for [@user,@idea] do |f| %>
        <p><%= f.label :title %></p>
        <p><%= f.text_field :title %></p>
        <p><%= f.label :description %></p>
        <p><%= f.text_field  :description %></p>
        <p><%= f.label :category %></p>
        <p><%= f.select :category_id, options_for_select( @category.collect{ |category| ["#{category.name}", category.id] } ), class: 'form-control' %></p>

        <p><%= f.submit %></p>
      <% end %>
</div>
