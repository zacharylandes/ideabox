<nav>
<h1>Welcome, <%= current_user.username %>!</h1>
</nav>
<%= link_to "Logout", root_path %>
<div class="container">
  <div  id="idea-form">
  <h1>What's your idea?</h1>
    <%= render partial: "form" %>
  </div>
    <% if !@ideas.nil? %>
      <% @ideas.each do |idea| %>
      <div class= "ideas-show">
        <p> Title: <%= idea.title  %></p>
        <p>Content: <%= idea.description  %></p>
        <p>Category: <%= idea.category.name  %></p>
        <p><%= link_to "Edit", edit_user_idea_path(@user, idea) %></p>
           <%= link_to "Delete", user_idea_path(@user, idea), method: "delete" %>
          <%idea.images.each do |image| %>
            <p>  <%= image.name %></p>
              <%=image_tag image.image.url unless image.image.url.nil? %>
          <% end %>
      <% end %>
    </div>
    </div>
    <% end %>
</div>
