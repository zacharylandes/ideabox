<h1>Welcome, <%= current_user.username %>!</h1>
<%= link_to "Logout", root_path %>

<h1>What's your idea?</h1>
<%= form_for [@user,@idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field  :description %>
  <%= f.label :category %>
  <%= f.select :category_id, options_for_select( @category.collect{ |category| ["#{category.name}", category.id] } ), class: 'form-control' %>
  <%= f.label :image %>
  <%= f.collection_select :image_ids, @images,:id,:name,{prompt: true}, {:multiple => true } %>
  <%= f.submit %>
<% end %>

<div class= "idea-list">
  <% if !@ideas.nil? %>
<% @ideas.each do |idea|   %>
<p><%= idea.title  %></p>
<p><%= idea.description  %></p>
<p><%= idea.category.name  %></p>

  <strong>Image:</strong>
  <%idea.images.each do |image| %>
    <%= image.name %>
    <div class="image">
      <%=image_tag image.image.url unless image.image.url.nil? %>
    </div>
  <% end %>

</div>
<li class =""><%= link_to "Edit", edit_user_idea_path(@user, idea) %></li>
<li class =""> <%= link_to "Delete", user_idea_path(@user, idea), method: "delete" %></li>
<% end %>
<% end %>
